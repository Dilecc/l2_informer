@using Microsoft.Web.Helpers
@model Informer.Models.RegisterModel
@{
    ViewBag.Title = "Регистрация";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>
<div id="loginForm">

    @using (Html.BeginForm())
    {
        <h2>Создание новой учетной записи.</h2>

        @Html.AntiForgeryToken()
        <p>@Html.ValidationSummary()</p>

        <fieldset>
            <legend>Форма регистрации</legend>
            <ol>
                <li>
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                </li>
                <li>
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email)
                </li>
                <li>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password)
                </li>
                <li>
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </li>
                @ReCaptcha.GetHtml(publicKey:"6LfsNuISAAAAAAVtJID9L9zxSDwmhUZVYgSjLEB0", theme: "white")
            </ol>
            <input class="css3button" type="submit" value="Регистрация" />
        </fieldset>
    }
</div>

<section id="socialLoginForm">
    <h2>Используйте для входа социальные сети</h2>
    @Html.Action("ExternalLoginsList", new { ViewBag.ReturnUrl })
</section>

